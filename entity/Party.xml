<?xml version="1.0" encoding="UTF-8" ?>
<entities xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/entity-definition-3.xsd">

    <entity entity-name="Party" package="moqui.udm">
        <field name="partyId" type="id" is-pk="true" />
        <field name="partyTypeId" type="id"/>
        <relationship type="one" related="PartyType" short-alias="type">
            <key-map field-name="partyTypeId"/>
        </relationship>
        <relationship type="one-nofk" title="PtyOrganization" related="Organization" short-alias="organization"/>
        <relationship type="one-nofk" title="PtyPerson" related="Person" short-alias="person"/>
        <relationship type="many" title="PtyRole" related="PartyRole" short-alias="roles">
            <key-map field-name="partyTypeId"/>
        </relationship>
        <master>
            <detail relationship="type"/>
            <detail relationship="PtyOrganization#moqui.udm.Organization"/>
            <detail relationship="PtyPerson#moqui.udm.Person"/>
            <detail relationship="PtyRole#moqui.udm.PartyRoles"/>
        </master>
    </entity>

    <entity entity-name="PartyType" package="moqui.udm">
        <field name="partyTypeId" type="id" is-pk="true" />
        <field name="description" type="id"/>
    </entity>

    <entity entity-name="Person" package="moqui.udm">
        <field name="partyId" type="id" is-pk="true"/>
        <field name="firstName" type="text-medium"/>
        <field name="lastname" type="text-medium"/>
        <field name="birthDate" type="date"/>
        <relationship type="one" related="Party">
            <key-map field-name="partyId"/>
        </relationship>
    </entity>

    <entity entity-name="Organization" package="moqui.udm">
        <field name="partyId" type="id" is-pk="true"/>
        <field name="organizationName" type="text-medium"/>
        <relationship type="one" related="Party" short-alias="organization">
            <key-map field-name="partyId"/>
        </relationship>
    </entity>

    <entity entity-name="PartyRole" package="moqui.udm">
        <field name="partyId" type="id" is-pk="true"/>
        <field name="roleTypeId" type="id" is-pk="true"/>

        <relationship type="one" related="Party" short-alias="partyrole">
            <key-map field-name="partyId"/>
        </relationship>
        <relationship type="many" related="RoleType" short-alias="roletype">
            <key-map field-name="roleTypeId"/>
        </relationship>
    </entity>

    <entity entity-name="RoleType" package="moqui.udm">
        <field name="roleTypeId" type="id" is-pk="true"/>
        <field name="description" type="text-medium"/>
    </entity>

    <entity entity-name="ContactMech" package="moqui.udm">
        <field name="contactMechId" type="id" is-pk="true"/>
        <field name="contactMechTypeId" type="id"/>
        <relationship type="one" related="ContactMechType">
            <key-map field-name="contactMechTypeId"/>
        </relationship>
    </entity>

    <entity entity-name="ContactMechType" package="moqui.udm">
        <field name="contactMechTypeId" type="id" is-pk="true"/>
        <field name="description" type="text-medium"/>
    </entity>

    <entity entity-name="ContactMechPurpose" package="moqui.udm">
        <field name="contactMechPurposeId" type="id" is-pk="true"/>
    </entity>

    <entity entity-name="PartyContactMech" package="moqui.udm">
        <field name="partyId" type="id" is-pk="true"/>
        <field name="contactMechId" type="id"  is-pk="true"/>
        <field name="contactMechPurposeId" type="id"  is-pk="true"/>
        <field name="fromDate" type="date"  is-pk="true"/>
        <relationship type="one" related="Party">
            <key-map field-name="partyId"/>
        </relationship>
        <relationship type="one" related="ContactMech">
            <key-map field-name="contactMechId"/>
        </relationship>
        <relationship type="one" related="ContactMechPurpose">
            <key-map field-name="contactMechPurposeId"/>
        </relationship>
    </entity>

    <entity entity-name="PostalAddress" package="moqui.udm">
        <field name="contactMechId" type="id" is-pk="true"/>
        <field name="toName" type="text-medium"/>
        <field name="attnName" type="text-medium"/>
        <field name="addressLine1" type="text-long"/>
        <field name="addressLine2" type="text-long"/>
        <field name="city" type="text-medium"/>
        <field name="postalCode" type="text-medium"/>
        <relationship type="one" related="ContactMech">
            <key-map field-name="contactMechId"/>
        </relationship>
    </entity>

    <entity entity-name="TelecomNumber" package="moqui.udm">
        <field name="contactMechId" type="id" is-pk="true"/>
        <field name="countryCode" type="text-medium"/>
        <field name="areaCode" type="text-medium"/>
        <field name="contactNumber" type="text-long"/>
        <field name="addressLine2" type="text-long"/>
        <field name="city" type="text-medium"/>
        <field name="postalCode" type="text-medium"/>
        <relationship type="one" related="ContactMech">
            <key-map field-name="contactMechId"/>
        </relationship>
    </entity>

    <entity entity-name="EmailAddress" package="moqui.udm">
        <field name="contactMechId" type="id" is-pk="true"/>
        <field name="infoString" type="text-medium"/>
        <relationship type="one" related="ContactMech">
            <key-map field-name="contactMechId"/>
        </relationship>
    </entity>
</entities>