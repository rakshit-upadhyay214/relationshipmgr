<?xml version="1.0" encoding="UTF-8"?>
<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-3.xsd"
        require-authentication="anonymous-all">
    <transition name="addPostal">
        <service-call name="PartyServices.create#PostalAddressContact"/>
        <default-response url="."/>
    </transition>
    <transition name="addTelecomNumber">
        <service-call name="PartyServices.create#TelecomNumberContact"/>
        <default-response url="."/>
    </transition>
    <transition name="addEmailAddress">
        <service-call name="PartyServices.create#EmailContact"/>
        <default-response url="."/>
    </transition>
    <widgets>
        <label text="Add Postal Address"/>
        <form-single name="Postal" transition="addPostal">
            <auto-fields-service service-name="PartyServices.create#PostalAddressContact"/>
            <field name="submitButton"><default-field title="Add"><submit/></default-field></field>
        </form-single>

        <label text="Add Telecom Number"/>
        <form-single name="TelecomNumber" transition="addTelecomNumber">
            <auto-fields-service service-name="PartyServices.create#TelecomContact"/>
            <field name="submitButton"><default-field title="Add"><submit/></default-field></field>
        </form-single>

        <label text="Add Email Address"/>
        <form-single name="Email" transition="addEmailAddress">
            <auto-fields-service service-name="PartyServices.create#EmailContact"/>
            <field name="submitButton"><default-field title="Add"><submit/></default-field></field>
        </form-single>
    </widgets>
</screen>